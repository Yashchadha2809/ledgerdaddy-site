{
  "builds": [
    { "src": "index.py", "use": "@vercel/python" },
    { "src": "*.html", "use": "@vercel/static" },
    { "src": "assets/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "^/$", "dest": "/index.html" },
    { "src": "^/(.*\\.html)$", "dest": "/$1" },
    { "src": "^/assets/(.*)$", "dest": "/assets/$1" },
    { "src": "^/api/(.*)$", "dest": "/index.py" }
  ]
}
