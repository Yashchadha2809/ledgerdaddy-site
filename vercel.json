{
  "version": 2,
  "builds": [
    { "src": "index.py", "use": "@vercel/python" },
    { "src": "**/*.html", "use": "@vercel/static" },
    { "src": "assets/**", "use": "@vercel/static" },
    { "src": "manifest.webmanifest", "use": "@vercel/static" },
    { "src": "sw.js", "use": "@vercel/static" },
    { "src": "icons/**", "use": "@vercel/static" },
    { "src": ".well-known/**", "use": "@vercel/static" }
  ],
  "headers": [
    {
      "source": "/.well-known/assetlinks.json",
      "headers": [
        { "key": "Content-Type", "value": "application/json; charset=utf-8" }
      ]
    },
    {
      "source": "/manifest.webmanifest",
      "headers": [
        { "key": "Content-Type", "value": "application/manifest+json; charset=utf-8" }
      ]
    },
    {
      "source": "/sw.js",
      "headers": [
        { "key": "Content-Type", "value": "application/javascript; charset=utf-8" }
      ]
    },
    {
      "source": "/icons/(.*)\\.png",
      "headers": [
        { "key": "Content-Type", "value": "image/png" }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/.well-known/:path*",
      "has": [{ "type": "host", "value": "www.ledgerdaddy.com" }],
      "destination": "https://ledgerdaddy.com/.well-known/:path*",
      "permanent": true
    },
    {
      "source": "/:path*",
      "has": [{ "type": "host", "value": "www.ledgerdaddy.com" }],
      "destination": "https://ledgerdaddy.com/:path*",
      "permanent": true
    }
  ],
  "rewrites": [
    { "source": "/.well-known/:path*", "destination": "/.well-known/:path*" },
    { "source": "/icons/:path*", "destination": "/icons/:path*" },
    { "source": "/assets/:path*", "destination": "/assets/:path*" },

    { "source": "/", "destination": "/home_min.html" },

    { "source": "/log-in", "destination": "/log_in.html" },
    { "source": "/personal-sign-up", "destination": "/personal_sign_up.html" },
    { "source": "/dashboard", "destination": "/dashboard.html" },
    { "source": "/marketplace", "destination": "/marketplace.html" },

    { "source": "/privacy", "destination": "/privacy.html" },
    { "source": "/terms", "destination": "/terms.html" },
    { "source": "/license", "destination": "/license.html" },
    { "source": "/cookie-policy", "destination": "/cookie-policy.html" },
    { "source": "/acceptable-use", "destination": "/acceptable-use.html" },
    { "source": "/security", "destination": "/security.html" },
    { "source": "/dpa", "destination": "/dpa.html" },
    { "source": "/sla", "destination": "/sla.html" },
    { "source": "/subprocessors", "destination": "/subprocessors.html" },

    { "source": "/:name.html", "destination": "/:name.html" },
    { "source": "/manifest.webmanifest", "destination": "/manifest.webmanifest" },
    { "source": "/sw.js", "destination": "/sw.js" },
    { "source": "/api/:path*", "destination": "/index.py" }
  ]
}
